---
import "../styles/global.css";

---
<script src="../../scripts/scripts.js" />
<header class="fixed top-0 left-0 w-full z-50 bg-gradient-to-r from-gray-900 via-black to-gray-900 border-b border-gray-800">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo / Brand -->
    <a href="/" class="text-xl font-bold text-indigo-400 hover:text-indigo-300 transition">
      Placeholder
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <a href="#features" class="text-gray-300 hover:text-indigo-400 transition">Features</a>
      <a href="#pricing" class="text-gray-300 hover:text-indigo-400 transition">Pricing</a>
      <a href="#testimonials" class="text-gray-300 hover:text-indigo-400 transition">Testimonials</a>
      <a href="#faq" class="text-gray-300 hover:text-indigo-400 transition">FAQ</a>
    </nav>

    <!-- CTA -->
    <div class="hidden md:block">
      <a
        href="#"
        class="px-5 py-2 bg-indigo-600 rounded-xl text-white font-medium hover:bg-indigo-700 transition"
      >
        Get Started
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      class="md:hidden text-gray-300 hover:text-indigo-400 transition focus:outline-none"
      id="mobile-menu-toggle"
      aria-label="Toggle navigation"
    >
      â˜°
    </button>
  </div>

  <!-- Mobile Dropdown -->
  <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 space-y-4 bg-gray-900 border-t border-gray-800">
    <a href="#features" class="block text-gray-300 hover:text-indigo-400 transition">Features</a>
    <a href="#pricing" class="block text-gray-300 hover:text-indigo-400 transition">Pricing</a>
    <a href="#testimonials" class="block text-gray-300 hover:text-indigo-400 transition">Testimonials</a>
    <a href="#faq" class="block text-gray-300 hover:text-indigo-400 transition">FAQ</a>
    <a
      href="#"
      class="block w-full text-center px-5 py-2 bg-indigo-600 rounded-xl text-white font-medium hover:bg-indigo-700 transition"
    >
      Get Started
    </a>
  </div>

</header>
